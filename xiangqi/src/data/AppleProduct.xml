<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="data.AppleProduct" table="AppleProduct">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="native" />
        </id>
       
         <property name="name"  type="java.lang.String"/>
         <property name="productIdentifier"  type="java.lang.String"/>
         <property name="uniqueUsed"  type="java.lang.Integer"/>
         <property name="used"  type="java.lang.Integer"/>
         <property name="uniqueBuy"  type="java.lang.Integer"/>
         <property name="buy"  type="java.lang.Integer"/>
         <property name="testUniBuy"  type="java.lang.Integer"/>
         <property name="testBuy"  type="java.lang.Integer"/>
         <property name="score" type="java.lang.Integer">
             <column name="score" default="0"></column>
         </property>
         <property name="lesson" type="java.lang.Integer">
             <column name="lesson" default="0"></column>
         </property>
         <property name="price" type="java.lang.Integer">
             <column name="price" default="1"></column>
         </property>
         
    </class>
</hibernate-mapping>

